<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/masterContainer"
    android:background="@drawable/default_element_dark"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/deviceListParent"
            android:gravity="center"
            android:paddingTop="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/border_light"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:text="RFCOMM (Bonded Devices)"
                    android:textColor="@color/lightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"/>

                <CheckBox
                    android:text="Secure Connection"
                    android:checked="true"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="#DDDDDD"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <CheckBox
                    android:text="Allow Connection"
                    android:checked="true"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="#DDDDDD"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border_light"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:text="RFCOMM (Unbonded Devices)"
                    android:textColor="@color/lightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"/>

                <CheckBox
                    android:text="Allow Connection"
                    android:checked="true"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="#DDDDDD"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border_light"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:text="Client UUID"
                    android:textColor="@color/lightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"/>

                <HorizontalScrollView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:textAllCaps="true"
                        android:text="6cb6fd5e-6c53-4afc-8b49-71636cd9abc8"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/lightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </HorizontalScrollView>

                <CheckBox
                    android:text="Random UUID"
                    android:checked="false"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="#DDDDDD"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border_light"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:text="Server UUID"
                    android:textColor="@color/lightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"/>

                <HorizontalScrollView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:textAllCaps="true"
                        android:text="6cb6fd5e-6c53-4afc-8b49-71636cd9abc8"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/lightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </HorizontalScrollView>

                <CheckBox
                    android:text="Random UUID"
                    android:checked="false"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="#DDDDDD"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:background="@drawable/shadow_bottom_border"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Global Settings"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/lightText"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/closeButton"
            android:background="@drawable/close_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>